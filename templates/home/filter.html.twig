{% block body %}
    <div class="Filter">
        <h3 class="Title-name">Filtras</h3>
        <form class="Filter-content" action="/filter">
            <select class="col-md-4 Select" name="type">
                <option value="">Select Academy program</option>
                <option {{ app.request.query.get('program_name') == 'Front-End' ? 'selected' : '' }} value="Front-End">Front-End</option>
                <option {{ app.request.query.get('program_name') == 'Back-End' ? 'selected' : '' }} value="Back-End">Back-End</option>
                <option {{ app.request.query.get('program_name') == 'Testavimas' ? 'selected' : '' }} value="Testavimas">Testavimas</option>
            </select>
            <select class="col-md-4 Select" name="price">
                <option value="">Select Academy Price</option>
                <option {{ app.request.query.get('program_price') == 'Free' ? 'selected' : '' }} value="Free">Free</option>
                <option {{ app.request.query.get('program_price') == 'Cheaper First' ? 'selected' : '' }} value="Cheaper First">Cheaper First</option>
                <option {{ app.request.query.get('program_price') == 'Expensive First' ? 'selected' : '' }} value="Expensive First">Expensive First</option>
            </select>
            <div class="col-md-12 Filter-action">
                <button type="submit" class="Button Button--primary">Filtruoti</button>
            </div>
        </form>
    </div>
    <div class="Table">
        <table class="Table-content col-md-12">
            <thead>
            <tr class="Table-header">
                <th class="Table-column">Program Name</th>
                <th class="Table-column">Program Price</th>
            </tr>
            </thead>
            <tbody>
            {% for program in programs %}
                <tr class="Table-row">
                    <td class="Table-data">{{ program.getProgramName }}</td>
                    <td class="Table-data">{{ program.getProgramPrice }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <br>
{% endblock %}
